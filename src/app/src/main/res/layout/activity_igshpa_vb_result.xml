<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IGSHPA_VB_Result">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="0dp">

        <RelativeLayout
            android:id="@+id/wholeScreen"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp">


            <TextView
                android:id="@+id/VB_calculation_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/calculation_result"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:id = "@+id/Table1">
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:text="R(G):"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"

                        android:id = "@+id/VB_result_RG"/>

                    <TextView
                        android:text="null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"

                        android:layout_marginStart="10dp"
                        android:id = "@+id/VB_result_RG_value"/>

                    <TextView
                        android:text="S(B):"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"

                        android:layout_column="3"
                        android:id = "@+id/VB_result_SB"/>
                    <TextView
                        android:text="null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="4"

                        android:layout_marginStart="10dp"
                        android:id = "@+id/VB_result_SB_value"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:text="R(PP):"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"

                        android:id = "@+id/VB_result_RPP"/>

                    <TextView
                        android:text="null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"

                        android:layout_marginStart="10dp"
                        android:id = "@+id/VB_result_RPP_value"/>

                    <TextView
                        android:text="R(Grout): "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:layout_column="3"

                        android:id = "@+id/VB_result_RGrout"/>
                    <TextView
                        android:text="null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="4"
                        android:layout_marginStart="10dp"

                        android:id = "@+id/VB_result_RGrout_value"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:text="R(B):"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_column="1"
                        android:id = "@+id/VB_result_RB"/>

                    <TextView
                        android:text="null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_marginStart="10dp"

                        android:id = "@+id/VB_result_RB_value"/>
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:text="F(H):"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"

                        android:id = "@+id/VB_result_FH"/>

                    <TextView
                        android:text="null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_marginStart="10dp"

                        android:id = "@+id/VB_result_FH_value"/>

                    <TextView
                        android:text="F(C):"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:layout_column="3"

                        android:id = "@+id/VB_result_FC"/>
                    <TextView
                        android:text="null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="4"
                        android:layout_marginStart="10dp"

                        android:id = "@+id/VB_result_FC_value"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:text="L(H.T):"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:id = "@+id/VB_result_LHT"/>

                    <TextView
                        android:text="null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_marginStart="10dp"

                        android:id = "@+id/VB_result_LHT_value"/>

                    <TextView
                        android:text="L(C.T):"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:layout_column="3"

                        android:id = "@+id/VB_result_LCT"/>
                    <TextView
                        android:text="null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="4"
                        android:layout_marginStart="10dp"

                        android:id = "@+id/VB_result_LCT_value"/>
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/VB_recommand_setup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Table1"
                android:layout_marginTop="20sp"
                android:text="@string/recommended_setup"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@id/VB_recommand_setup"
                android:id = "@+id/Table2">
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:id="@+id/VB_num_of_borehols"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:text="@string/num_of_boreholes"
                        android:textSize="20sp" />

                    <TextView
                        android:text="null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_marginStart="10dp"
                        android:textSize="20dp"
                        android:id = "@+id/VB_num_of_borehols_value"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:id="@+id/VB_minBoreholeLength"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:text="@string/min_borehole_length"
                        android:textSize="20sp" />

                    <TextView
                        android:text="null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_marginStart="10dp"
                        android:textSize="20sp"
                        android:id = "@+id/VB_minBoreholeLength_value"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <TextView
                        android:text="@string/configuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:layout_column="1"
                        android:layout_marginTop="10dp"
                        android:id = "@+id/Configure"/>
                </TableRow>
            </TableLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@id/Table2"
                android:id = "@+id/Table3">
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="260dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/vb_new" />
                </TableRow>
            </TableLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/Table3"
                android:id = "@+id/Table4">


                <!--                <TableRow-->
                <!--                    android:layout_width="fill_parent"-->
                <!--                    android:layout_height="fill_parent">-->

                <!--                    <TextView-->
                <!--                        android:id="@+id/VB_result_config_len"-->
                <!--                        android:layout_width="wrap_content"-->
                <!--                        android:layout_height="wrap_content"-->
                <!--                        android:layout_column="1"-->
                <!--                        android:textSize="20dp"-->
                <!--                        android:text=" Minimum Borehole Length:"-->
                <!--                        />-->

                <!--                </TableRow>-->

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:id="@+id/VB_result_config"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_column="1"
                        android:text="@string/null_m_boreholes"
                        android:textSize="20sp" />

                </TableRow>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/Save_share_button"
                            android:layout_width="@dimen/button_width"
                            android:layout_height="@dimen/button_height"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:background="@drawable/round_button"
                            android:onClick="saveAndSharePopup"
                            android:text="@string/save_and_share" />

                        <Button
                            android:id="@+id/Back"
                            android:layout_width="@dimen/button_width"
                            android:layout_height="@dimen/button_height"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/round_button"
                            android:onClick="clickBack"
                            android:text="@string/back_to_main_menu"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/Save_share_button" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </RelativeLayout>

            </TableLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>